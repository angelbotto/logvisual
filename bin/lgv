#!/usr/bin/env ruby

require 'logvisual'
require 'cli'

log = LogvisualCli.new

case ARGV[0]
when 'auth:signin' then log.signin
when 'auth:signup' then log.signup
when 'auth:logout' then log.logout
when 'task:create' then log.create(ARGV[1] || nil)
when 'task:list' then log.list
else log.show_help
end
